#!name= YouTube
#!desc= 精简+去广告
#!icon= https://gitlab.com/lodepuly/iconlibrary/-/raw/main/App_icon/120px/YouTube.png

[Argument]
captionLang = select, "zh-Hans", "zh-Hant", tag = 字幕语言, desc = 选择翻译语言

[Rewrite]
^https?:\/\/[\w-]+\.googlevideo\.com\/(?!(dclk_video_ads|videoplayback\?)).+&amp;oad - reject-200

[Script]
http-response ^https?:\/\/youtubei\.googleapis\.com\/youtubei\/v1\/(browse|next|player|search|reel\/reel_watch_sequence|guide|account\/get_setting|get_watch) script-path=https://github.com/z-jinke/loon/raw/refs/heads/main/Script/youtube.js, requires-body=true, binary-body-mode=true, timeout=60, tag=YouTube响应修改,argument=[{captionLang}]

[MITM]
hostname = *.googlevideo.com,youtubei.googleapis.com
