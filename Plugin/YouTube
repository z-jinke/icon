#!name= YouTube
#!desc= 净化+去广告
#!icon= https://gitlab.com/lodepuly/iconlibrary/-/raw/main/App_icon/120px/YouTube.png

[Argument]
blockUpload = switch, true, false, tag = 隐藏上传按钮, desc = 是否隐藏上传按钮
blockImmersive = switch, true, false, tag = 隐藏选段按钮, desc = 是否隐藏选段按钮

[Rule]
AND,((DOMAIN-SUFFIX, googlevideo.com),(PROTOCOL,QUIC)),REJECT

[Rewrite]
^https?:\/\/[\w-]+\.googlevideo\.com\/initplayback.+&oad mock-response-body data-type=text status-code=502

[Script]
http-response ^https:\/\/youtubei\.googleapis\.com\/youtubei\/v1\/(?:browse|next|player|search|reel\/reel_watch_sequence|guide|account\/get_setting|get_watch) script-path=https://raw.githubusercontent.com/Maasea/sgmodule/master/Script/Youtube/dist/youtube.response.preview.js, requires-body=true, binary-body-mode=true, tag=响应修改,argument=[{blockUpload},{blockImmersive}]

[MITM]
hostname = *.googlevideo.com,youtubei.googleapis.com
